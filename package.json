{
    "name": "tsco",
    "displayName": "TypeScript Code Organizer",
    "description": "TypeScript Code Organizer for VS Code",
    "version": "2.0.5",
    "publisher": "aljazsim",
    "author": {
        "name": "aljazsim",
        "url": "https://github.com/aljazsim/"
    },
    "icon": "doc/logo.png",
    "galleryBanner": {
        "color": "#4c725d",
        "theme": "dark"
    },
    "bugs": {
        "url": "https://github.com/aljazsim/vs-code-typescript-code-organizer/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/aljazsim/vs-code-typescript-code-organizer.git"
    },
    "homepage": "https://github.com/aljazsim/vs-code-typescript-code-organizer",
    "engines": {
        "vscode": "^1.69.1"
    },
    "license": "MIT",
    "categories": [
        "Formatters"
    ],
    "keywords": [
        "TypeScript",
        "code",
        "organize",
        "format",
        "members",
        "properties",
        "methods",
        "regions"
    ],
    "activationEvents": [
        "onLanguage:typescript",
        "tsco.organize",
        "tsco.organizeAll"
    ],
    "contributes": {
        "configuration": {
            "title": "Typescript Code Organizer configuration",
            "properties": {
                "tsco.organizeOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Source code will get organized automatically on file saved."
                }
            }
        },
        "commands": [
            {
                "command": "tsco.initialize",
                "title": "Create Configuration File",
                "category": "TypeScript Code Organizer"
            },
            {
                "command": "tsco.organize",
                "title": "Organize Current File",
                "category": "TypeScript Code Organizer",
                "when": "editorTextFocus && editorLangId == typescript"
            },
            {
                "command": "tsco.organizeAll",
                "title": "Organize All Files",
                "category": "TypeScript Code Organizer"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "tsco.organize",
                    "group": "1_modification",
                    "when": "editorTextFocus && editorLangId == typescript"
                }
            ]
        },
        "keybindings": [
            {
                "command": "tsco.organize",
                "key": "ctrl+shift+o",
                "mac": "cmd+shift+o",
                "when": "editorTextFocus && editorLangId == typescript"
            }
        ],
        "languages": [
            {
                "id": "typescript",
                "extensions": [
                    ".ts"
                ]
            }
        ]
    },
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "npx eslint",
        "prepare": "husky"
    },
    "devDependencies": {
        "@types/node": "^22.13.0",
        "@types/vscode": "^1.69.1",
        "typescript-eslint": "^8.19.1",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.19.0",
        "husky": "^9.1.7"
    },
    "dependencies": {
        "typescript": "^5.6.3",
        "glob": "^11.0.1",
        "wildcard-match": "^5.1.4"
    }
}
